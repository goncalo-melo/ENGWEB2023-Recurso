extends layout

block content
    header.w3-container.w3-indigo
      h1 Consulta #{c._id}
    
    .w3-container
        ul.w3-ul.w3-card-4
            li #[b Id: ] #{c._id}
            li #[b Nome: ] #{c.nome}
            li #[b Idade: ] #{c.idade}
            li #[b Sexo: ] #{c.sexo}
            li #[b Data: ] #{c.data}
            li #[b Número de Operações: ] #{c.nr_operacoes}
            each o in c.operacoes
              li #[b Código: ] 
                  a(href="/intervencoes/" + o.codigo) #{o.codigo}
              li #[b Nome: ] #{o.nome}
              li #[b Descrição: ] #{o.descricao}

            
    
    footer.w3-container.w3-indigo
      address Generated by EngWeb in #{d} - #[a(href="/") Voltar]